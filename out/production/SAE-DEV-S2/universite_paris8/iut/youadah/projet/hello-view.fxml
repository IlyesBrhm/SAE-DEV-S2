<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>

<StackPane fx:id="gameRoot" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="universite_paris8.iut.youadah.projet.controller.GameController">

    <TilePane fx:id="tileMap" prefHeight="1080" prefWidth="1920" />
    <Pane fx:id="playerLayer" pickOnBounds="false" />
    <Pane fx:id="ath" />

    <Pane fx:id="overlayRouge"
          style="-fx-background-color: rgba(255, 0, 0, 0.4);"
          visible="false"
          mouseTransparent="true" />

    <Label fx:id="messageMort"
           text=" Vous êtes mort"
           style="-fx-font-size: 36px; -fx-text-fill: red; -fx-font-weight: bold;"
           visible="false"
           StackPane.alignment="TOP_CENTER"
           translateY="100"/>

    <Button fx:id="boutonQuitter"
            text="Quitter"
            visible="false"
            onAction="#quitterJeu"
            StackPane.alignment="TOP_CENTER"
            translateY="160"
            style="-fx-font-size: 20px; -fx-background-color: darkred; -fx-text-fill: white;" />

    <Button fx:id="boutonReapparaitre"
            text="Réapparaître"
            visible="false"
            onAction="#reapparaitre"
            StackPane.alignment="TOP_CENTER"
            translateY="210"
            style="-fx-font-size: 20px; -fx-background-color: green; -fx-text-fill: white;" />

</StackPane>
